    <script>
        $(document).ready(function () {

            $('#form-register').validate();

            $("input#FirstName").rules("add", {
                required: true,
                messages: {
                    required: "*"
                }

            });

            $("input#LastName").rules("add", {
                required: true,
                messages: {
                    required: "*"
                }

            });

            $("input#Email").rules("add", {
                required: true,
                email: true,
                messages: {
                    required: "*",
                    email: "*"
                }

            });

            $("input#Email").rules("add", {
                required: true,
                messages: {
                    required: "*"
                }

            });

            $("input#Password").rules("add", {
                required: true,
                messages: {
                    required: "*"
                }

            });

            $("input#ConfirmPassword").rules("add", {
                required: true,
                equalTo: 'input#Password',
                messages: {
                    required: "*"
                }

            });

            $("input#ConfirmTerms").rules("add", {
                required: true,
                messages: {
                    required: "*",
                    equalTo: "*"
                }

            });

            $("#ConfirmTerms").on("click", function () {
                if ($(this).is(":checked")) {
                    $("#err").hide();
                } else {
                    $("#err").html("*").css("color", "red").show();
                }
            });

            $("#form-register").on("submit", function () {

                if (!$("#ConfirmTerms").is(":checked")) {
                    $("#err").html("*").css("color", "red").show();
                    return false;
                } else {
                    $("#err").hide();
                }

                if ($('input#Password').valid()) {
                    $("#passwordInformation").css("color", "");
                } else {
                    $("#passwordInformation ").css("color", "red");
                    return false;
                }

                var response = grecaptcha.getResponse();
                if (response.length === 0) {
                    $("#captcha-err").show();
                    return false;
                }

                $.blockUI({
                    message: "<div style='text-align:center'><img src=\"/Content/desk/img/preloader.gif\"><br>Lütfen bekleyiniz...</div>",
                    css: { backgroundColor: '#fff', color: '#aaa', border: '3px solid #016bff', padding: '16px' }
                });

                return true;
            });
        });
    </script>
